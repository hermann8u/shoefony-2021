<div class="thumbnail">
    <img src="{{ asset('img/products/' ~ product.image.url) }}" alt="{{ product.image.alt }}">
    <div class="caption">
        <h3>{{ product.name|title }}</h3>
        <p>{{ product.description }}</p>
        <p>
            <span class="badge">{{ product.price|format_currency('EUR') }}</span>
            <a href="{{ path('store_show_product', {'id':  product.id, 'slug': product.slug}) }}" class="btn btn-default">Voir la fiche</a>
        </p>
    </div>
</div>
